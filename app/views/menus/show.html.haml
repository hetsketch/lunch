.container
  %h2 Menu # #{@menu.id}
  %h3 First courses
  - @menu.menu_items.each do |mi|
    - if mi.category.name == 'First course'
      %strong= mi.name
      %span= mi.price
      %br

  %h3 Main courses
  - @menu.menu_items.each do |mi|
    - if mi.category.name == 'Main course'
      %strong= mi.name
      %span= mi.price
      %br

  %h3 Drinks
  - @menu.menu_items.each do |mi|
    - if mi.category.name == 'Drink'
      %strong= mi.name
      %span= mi.price
      %br


  %br
